<MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudIconButton OnClick="DrawerToggleCallback" Icon="@Icons.Rounded.Notes" Color="Color.Inherit" Edge="Edge.Start" />
    <MudSpacer />
    <NavLink ActiveClass="d-flex" href="/">
        <MudBlazorLogo Class="taskpicker-logo"/>
        <MudText Color="Color.Primary" Typo="Typo.h5" Class="brand-text mt-1">Task Picker</MudText>
    </NavLink>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End" Href="https://github.com/ColdForeign/TaskPicker" />
</MudHidden>
<MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
    <NavLink ActiveClass="d-flex me-4" href="/">
        <MudBlazorLogo Class="taskpicker-logo"/>
        <MudText Color="Color.Primary" Typo="Typo.h5" Class="brand-text mt-1">Task Picker</MudText>
    </NavLink>
    <MudButton Href="/picker" Color="Color.Inherit" Variant="Variant.Text" Class="@GetActiveClass(BasePage.Picker)">Task Picker</MudButton>
    <MudButton Href="/tasks" Color="Color.Inherit" Variant="Variant.Text" Class="@GetActiveClass(BasePage.Tasks)">Old Tasks</MudButton>
    <MudButton Href="/settings" Color="Color.Inherit" Variant="Variant.Text" Class="@GetActiveClass(BasePage.Settings)">Botnet Settings</MudButton>

    <MudSpacer />
    <AppbarButtons />
    <MudTooltip Duration="1000" Text="GitHub Repository">
        <MudIconButton Href="https://github.com/ColdForeign/TaskPicker" Target="_blank" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End" />
    </MudTooltip>
</MudHidden>
